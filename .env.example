# Email Configuration for Personal Testing
# Copy this file to .env and replace with your actual values

# Sender Email (your email that will send the emails)
SENDER_EMAIL=your-email@gmail.com

# Recipient Email (your email that will receive the test emails)
RECIPIENT_EMAIL=your-email@gmail.com

# Email Service Configuration
# For Gmail, you'll need an App Password (not your regular password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Application Configuration
APP_EMAIL_FROM_NAME=Your Name
APP_EMAIL_ENABLED=true

# Server Configuration
SERVER_PORT=9090 